extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-sm.text-center.p-2.mb-1.font-bold.rounded-md= error.msg


        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/registro" novalidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Tu nombre
                        input#nombre.w-full.px-3.py-3.mb-2.border.border-grey-300.rounded-md.placeholder-grey-400(
                            placeholder="Tu Nombre"
                            type="text"
                            name="nombre"
                            value=  usuario ? usuario.nombre : ""
                            )
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email
                        input#email.w-full.px-3.py-3.mb-2.border.border-grey-300.rounded-md.placeholder-grey-400(
                            placeholder="Email"
                            type="email"
                            name="email"
                            value= usuario ? usuario.email : ""
                            )
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password
                        input#password.w-full.px-3.py-3.mb-2.border.border-grey-300.rounded-md.placeholder-grey-400(
                            placeholder="Repite tu password"
                            type="password"
                            name="password"
                            )
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repetirPassword") Repita su password
                        input#repetirPassword.w-full.px-3.py-3.mb-2.border.border-grey-300.rounded-md.placeholder-grey-400(
                            placeholder="Repite tu password"
                            type="password"
                            name="repetir_password"
                            )
                    div.flex.items-center.justify-between 
                        a.text-gray-500.text-sm(href="/auth/login") Ya tienes cuenta? Inicia sesion
                        a.text-gray-500.text-sm(href="/auth/olvide-password") Olvide mi password

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer rounded-md" type="submit" value="Crear cuenta")
                        